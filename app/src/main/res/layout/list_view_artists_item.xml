<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="8dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp"
    android:paddingRight="16dp"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/song_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:src="@drawable/no_image"/>

    <ImageView
        android:id="@+id/next_fragment"
        android:layout_width="36dp"
        android:layout_height="44dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/next_fragment"/>

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_toRightOf="@id/song_image_view"
        android:layout_toEndOf="@+id/song_image_view"
        android:layout_toLeftOf="@+id/next_fragment"
        android:layout_toStartOf="@+id/next_fragment"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        tools:text="Un cantec foarte meserias"/>

    <TextView
        android:id="@+id/number_tracks_text_view"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/title_text_view"
        android:layout_toRightOf="@id/song_image_view"
        android:layout_toEndOf="@+id/song_image_view"
        android:layout_toLeftOf="@+id/next_fragment"
        android:layout_toStartOf="@+id/next_fragment"
        tools:text="32 tracks"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>