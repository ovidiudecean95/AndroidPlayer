<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/album_image_view"
        android:layout_width="@android:dimen/notification_large_icon_width"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:layout_centerVertical="true"
        android:src="@drawable/no_image"
        android:scaleType="centerCrop"/>

    <!--<TextView-->
        <!--android:id="@+id/app_name_text_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_toRightOf="@+id/album_image_view"-->
        <!--android:layout_toEndOf="@+id/album_image_view"-->
        <!--android:textSize="18sp"-->
        <!--android:text="@string/app_name"-->
        <!--android:textColor="@android:color/darker_gray"/>-->

    <TextView
        android:id="@+id/title_text_view"
        android:lines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/close_button"
        android:layout_toStartOf="@+id/close_button"
        android:layout_toRightOf="@+id/album_image_view"
        android:layout_toEndOf="@+id/album_image_view"
        android:textColor="@color/colorPrimary"
        tools:text="You wanna go"/>

    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@android:drawable/ic_menu_close_clear_cancel"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/album_image_view"
        android:layout_toEndOf="@id/album_image_view"
        android:layout_below="@id/title_text_view"
        android:orientation="horizontal"
        android:weightSum="3">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/previous"
                android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/play_pause_button_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/play_pause_player_selector"
                android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/next"
                android:layout_gravity="center"/>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>